
@{
    Layout = null;
}
@model MyMVCNET.UI.Models.VM.SehirVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyDropdownList</title>
</head>
<body>
    <div>
        @Html.DropDownList("Sehirler", new List<SelectListItem>()
        {
            new SelectListItem(){Text = "Diyarbakır",Value = "10"},
            new SelectListItem(){Text = "Hatay",Value = "11"},
        }, new { @style = "color:red;" })


        @*Controllerden geleb select list burada list<SelectListItem> tipine nasıl çevrilir.*@

        @*@Html.DropDownList("Sehirlerim",)*@

        @using (@Html.BeginForm())
        {
            @Html.DropDownListFor(a => a.ID, new List<SelectListItem>()
            {
                new SelectListItem(){Text = "Diyarbakır",Value = "10"},
                new SelectListItem(){Text = "Hatay",Value = "11"},
            }, new { @style = "color:red;" })

            <input type="submit" value="Gönder"/>
        }

    </div>
</body>
</html>
