}
@model MyMVCNET.UI.Models.VM.AccountVM.MyUserVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>Giriş Sayfası</h1>

	    <div>
            @using (Html.BeginForm("Index", "Account", FormMethod.Post))
            {
                @Html.TextBoxFor(x => x.FirstName)<br /><br />
                @Html.TextBoxFor(x => x.LastName)<br /><br />
                @Html.TextBoxFor(x => x.password)<br /><br />
                @Html.TextBoxFor(x => x.Age)<br /><br />
                @Html.CheckBoxFor(x => x.RememberMe)<span> Beni Hatırla</span>
                <input type="submit" value="Giriş Yap" name="name" />
            }
            @*// beni unut butonu olacak tıklayınca cookie nin ExpiresDate ini -1 yap*@

        </div>
    </div>
</body>
</html>
